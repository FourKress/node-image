<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <style>
    html,body {
      font-family: PingFangSC-Light, sans-serif;
      padding: 0;
      margin: 0;
      background-color: #fff;
      width: 550px;
      height: 440px;
    }

    .warp {
      width: 550px;
      height: 440px;
      box-sizing: border-box;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      justify-items: center;
      justify-content: space-evenly;
      align-items: flex-start;
      align-content: space-evenly;
      position: relative;
      padding-top: 28px;
    }

    .item {
      width: 165px;
      height: 44px;
      border-radius: 44px;
      overflow: hidden;
      background-color: #fff;
      display: flex;
      align-items: center;
      font-size: 12px;
      border: 1px solid #fff;
      box-sizing: border-box;
    }

    .item-empty {
      border-color: #0092FF;
    }

    .name-wrap {
      flex: 1;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 14px;
      color: #000;
    }

    .tag {
      display: block;
      width: 43px;
      height: 14px;
      background: url('data:image/png;base64,') no-repeat;
      background-size: 100% 100%;
      margin: 3px 0 0 3px;
    }

    .name {
      flex: 1;
      max-height: 14px;
      padding-left: 4px;
      width: 100px;
      max-width: 100px;
      height: 14px;
      line-height: 14px;
      overflow: hidden;
      text-overflow:ellipsis;
      white-space: nowrap;
    }
    .name-empty {
      color: #0092FF;
    }

    .img {
      display: block;
      width: 44px;
      height: 44px;
      border-radius: 50%;
      overflow: hidden;
      margin-right: 8px;
      text-align: center;
      line-height: 44px;
      font-size: 18px;
      color: #fff;
      background-color: #0092FF;
    }

    .stadium-name {
      position: absolute;
      top: 0;
      left: 0;
      color: red;
      width: 100%;
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      padding-top: 4px;
      box-sizing: border-box;
    }
  </style>
</head>
<body>
<div class="warp">
  {{#each data as |row|}}
    {{#if row.nickName}}
      <div class="item">
        {{#if row.avatarUrl}}
          <img class="img" src="{{ row.avatarUrl }}" alt="">
        {{else}}
          <span class="img"></span>
        {{/if}}
        <span class="name-wrap">
          <span class="name">{{ row.nickName }}</span>
          {{#if row.nickName}}
            <i class="tag"></i>
          {{/if}}
        </span>
      </div>
    {{else}}
      <div class="item item-empty">
        <span class="img" class="name">{{ row.index }}</span>
        {{#if row.isCancel}}
          <span class="name-wrap">
            <span class="name name-empty">组队失败</span>
          </span>
        {{else if row.isDone}}
          <span class="name-wrap">
            <span class="name name-empty">已结束</span>
          </span>
        {{else}}
          <span class="name-wrap">
            <span class="name name-empty">点击报名</span>
          </span>
        {{/if}}
      </div>
    {{/if}}
  {{/each}}
  <div class="stadium-name">石桥广场五人制</div>
</div>
</body>
</html>
